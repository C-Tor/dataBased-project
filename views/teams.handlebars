<div class="list_container">
  <form id="search_team" action="" method="">
    <label> Search team name:</label>
    <input
      id="team_name_search_string"
      type="text"
      name="team_name_search_string"
      value=""
      placeholder="Enter Team Name"
      />
    <input type="button" value="Search" onclick="searchTeam()" />
  </form>
  <h1>Teams</h1>
  <table>
    <thead>
      <th>Division</th>
      <th>Home Town</th>
      <th>Team</th>
    </thead>
    <tbody>
      {{#each teams}}
      <tr>
        <td>{{div_name}}</td>
        <td>{{hometown}}</td>
        <td>{{team_name}}</td>
        <td><button onclick = "deleteTeam({{team_id}})">Delete</button></td>
        <td><a href="/teams/{{team_id}}">Update</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="crud">
  <h2>Add Team</h2>

  <form class="" action="/teams" method="post">
    <p>
    Team Name: <input type="text" id="team_name" placeholder="Input team name here" name="team_name">
    </p>
    <p>
    Hometown: <input type="text" id="hometown" placeholder="Input team hometown here" name="hometown">
    </p>
    <p>
      Division <select name="division">
        {{#each divisions}}
          <option value="{{div_id}}"> {{div_name}}</option>
        {{/each}}
      </select>
    </p>
    <input type="submit" value="Add Team">
  </form>





</div>
