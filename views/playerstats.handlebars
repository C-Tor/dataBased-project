<div class="list_container">
  <form id="search_people" action="" method="">
    <label> Search player statistics by player last name:</label>
    <input
      id="last_name_search_string"
      type="text"
      name="last_name_search_string"
      value=""
      placeholder="Enter Players Last Name"
      />
    <input type="button" value="Search" onclick="searchPlayerStatistics()" />
  </form>
  <h1>Player Game Statistics</h1>
  <table>
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <!-- <th>Game Info</th> -->
      <th>Game Date</th>
      <th>Points</th>
      <th>Assists</th>
      <th>Rebounds</th>
    </thead>
    <tbody>
      {{#each playerstats}}
      <tr>
        <td>{{fname}}</td>
        <td>{{lname}}</td>
        <!-- <td>{{hteam}} VS {{ateam}}</td> -->
        <td>{{gdate}}</td>
        <td>{{points}}</td>
        <td>{{assists}}</td>
        <td>{{rebounds}}</td>
        <td><button onclick = "deletePlayerStatistics({{player_id}}, {{game_id}})">Delete</button></td>
        <td><a href="/playerstats/player_id/{{player_id}}/game_id/{{game_id}}">Update</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="crud">
  <h2>Add Player Statistic</h2>

  <form class="" action="/playerstats" method="post">
    <p>
      Player: <select name="player">
        {{#each players}}
          <option value="{{player_id}}">{{pfname}} {{plname}}</option>
        {{/each}}
      </select>
    </p>
    <p>
      Game: <select name="game">
        {{#each games}}
          <option value="{{game_id}}">{{hometeam_name}} VS {{awayteam_name}}, {{gdate}}</option>
        {{/each}}
      </select>
    </p>
    <p>Points: <input type="number" id="points" placeholder="points" name = "points" step="1" min="-1000"></p>
    <p>Assists: <input type="number" id="assists" placeholder="assists" name = "assists" step="1" min="0"></p>
    <p>Rebounds: <input type="number" id="rebounds" placeholder="rebounds" name = "rebounds" step="1" min="0"></p>
    <input type="submit" value="Add Player">
  </form>

</div>
