<div class="crud">
  <h2>Update {{player.fname}} {{player.lname}}</h2>

  <form id="update-player" action="/players" method="put">
    <p>First Name: <input type="text" name="fname" value="{{player.fname}}"></p>
    <p>Middle Name: <input type="text" name = "mname" value="{{player.mname}}"></p>
    <p>Last Name*: <input type="text" name = "lname" value="{{player.lname}}"></p>
    <p>
      Team: <select name="team" id="team-selector">
        {{#each teams}}
          <option value="{{id}}"> {{team_name}}</option>
        {{/each}}
      </select>
    </p>
    <p>Jersey Number: <input type="text" name = "number" value="{{player.number}}"></p>
    <p>Birthdate: <input type="date" name = "birthdate" value="{{player.p_birthday}}"></p>
    <p>Position: <input type="text" name = "position" value="{{player.position}}"></p>
    <p><span class="notes">*indicates a required field</span></p>
  </form>
  <button type="button" onclick="updatePlayer({{player.player_id}})">Update Player</button>
  <script defer>selectTeam({{player.team_id}});</script>

</div>
